// tests/test_structs_classes.yen

// Structs
struct Point {
    x;
    y;
}

let p = Point;
p["x"] = 10;
p["y"] = 20;
print p["x"]; // Expected: 10
print p["y"]; // Expected: 20

// Classes
class Person {
    let name;
    let age;

    func init(name, age) {
        this.name = name;
        this.age = age;
    }

    func describe() {
        print "Name: " + this.name + ", Age: " + str(this.age);
    }
}

let person1 = Person("Alice", 30);
person1.describe(); // Expected: Name: Alice, Age: 30

class Employee {
    let name;
    let id;
    func get_name() {
        return this.name;
    }
}

let employee1 = Employee;
employee1.name = "Bob";
employee1.id = 123;
print employee1.get_name(); // Expected: Bob
print employee1.id; // Expected: 123
