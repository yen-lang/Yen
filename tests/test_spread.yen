// test_spread.yen - Spread operator

// Spread in list literals
let a = [1, 2, 3];
let b = [4, 5, 6];
let merged = [...a, ...b];
print len(merged); // Expected: 6
print merged[0]; // Expected: 1
print merged[5]; // Expected: 6

// Spread with extra elements
let extended = [0, ...a, 99];
print len(extended); // Expected: 5
print extended[0]; // Expected: 0
print extended[4]; // Expected: 99

// Spread in function calls
func sum3(x, y, z) {
    return x + y + z;
}
let args = [10, 20, 30];
let total = sum3(...args);
print total; // Expected: 60

// Nested spread
let c = [7, 8];
let all = [...a, ...b, ...c];
print len(all); // Expected: 8

print "spread ok";
