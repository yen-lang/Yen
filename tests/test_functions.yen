func add(a, b) {
    return a + b;
}

let result = add(10, 20);
print result; // Expected: 30

func greet(name) {
    print "Hello, " + name + "!";
}

greet("Yen"); // Expected: Hello, Yen!

func factorial(n) {
    if (n == 0) {
        return 1;
    }
    return n * factorial(n - 1);
}

print factorial(5); // Expected: 120

func counter() {
    let count = 0;
    return count; // Return the initial count instead of a function
}

func increment(currentCount) { // Global increment function
    return currentCount + 1;
}

var myCounterValue = counter();
myCounterValue = increment(myCounterValue);
print myCounterValue; // Expected: 1
myCounterValue = increment(myCounterValue);
print myCounterValue; // Expected: 2
