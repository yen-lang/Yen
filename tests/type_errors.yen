# Type Error Test Suite
# This file demonstrates all the type errors that the type checker can detect

# ============================================================================
# VARIABLE TYPE MISMATCHES
# ============================================================================

# ERROR: Cannot assign string to int32
let errorInt: int32 = "not a number";

# ERROR: Cannot assign int to string
let errorString: string = 123;

# ERROR: Cannot assign float to bool
let errorBool: bool = 3.14;

# ============================================================================
# FUNCTION PARAMETER TYPE MISMATCHES
# ============================================================================

func addNumbers(x: int32, y: int32) -> int32 {
    return x + y;
}

# ERROR: Passing strings to function expecting int32
let badCall1 = addNumbers("hello", "world");

# ERROR: Passing mixed types
let badCall2 = addNumbers(10, "twenty");

# ============================================================================
# RETURN TYPE MISMATCHES
# ============================================================================

# ERROR: Returning string when int32 expected
func shouldReturnInt() -> int32 {
    return "oops";
}

# ERROR: Returning int when string expected
func shouldReturnString() -> string {
    return 42;
}

# ============================================================================
# ASSIGNMENT TO WRONG TYPE
# ============================================================================

let typedVar: int32 = 100;

# ERROR: Cannot reassign to different type
# (Note: This would be caught if we had assignment type checking)
# typedVar = "now a string";

