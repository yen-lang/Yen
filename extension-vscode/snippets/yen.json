{
  "Function Declaration": {
    "prefix": "func",
    "body": [
      "func ${1:name}($2) {",
      "\t$0",
      "}"
    ],
    "description": "Define a function"
  },
  "Function with Return Type": {
    "prefix": "funcr",
    "body": [
      "func ${1:name}($2) -> ${3:type} {",
      "\t$0",
      "}"
    ],
    "description": "Define a function with return type"
  },
  "Class Declaration": {
    "prefix": "class",
    "body": [
      "class ${1:ClassName} {",
      "\tlet ${2:field};",
      "",
      "\tfunc ${3:method}() {",
      "\t\t$0",
      "\t}",
      "}"
    ],
    "description": "Define a class"
  },
  "Struct Declaration": {
    "prefix": "struct",
    "body": [
      "struct ${1:StructName} {",
      "\t${2:field};",
      "\t$0",
      "}"
    ],
    "description": "Define a struct"
  },
  "Enum Declaration": {
    "prefix": "enum",
    "body": [
      "enum ${1:EnumName} {",
      "\t${2:Variant1},",
      "\t${3:Variant2},",
      "\t$0",
      "}"
    ],
    "description": "Define an enum"
  },
  "If Statement": {
    "prefix": "if",
    "body": [
      "if (${1:condition}) {",
      "\t$0",
      "}"
    ],
    "description": "If statement"
  },
  "If-Else Statement": {
    "prefix": "ife",
    "body": [
      "if (${1:condition}) {",
      "\t$2",
      "} else {",
      "\t$0",
      "}"
    ],
    "description": "If-else statement"
  },
  "While Loop": {
    "prefix": "while",
    "body": [
      "while (${1:condition}) {",
      "\t$0",
      "}"
    ],
    "description": "While loop"
  },
  "For Loop": {
    "prefix": "for",
    "body": [
      "for ${1:item} in ${2:collection} {",
      "\t$0",
      "}"
    ],
    "description": "For-in loop"
  },
  "For Range": {
    "prefix": "forr",
    "body": [
      "for ${1:i} in ${2:0}..${3:10} {",
      "\t$0",
      "}"
    ],
    "description": "For loop with range"
  },
  "For Range Inclusive": {
    "prefix": "forri",
    "body": [
      "for ${1:i} in ${2:0}..=${3:10} {",
      "\t$0",
      "}"
    ],
    "description": "For loop with inclusive range"
  },
  "Match Expression": {
    "prefix": "match",
    "body": [
      "match (${1:value}) {",
      "\t${2:pattern} => ${3:result};",
      "\t_ => ${4:default};",
      "}"
    ],
    "description": "Match expression"
  },
  "Match with Range": {
    "prefix": "matchr",
    "body": [
      "match (${1:value}) {",
      "\t${2:0}..${3:10} => ${4:result1};",
      "\t${5:10}..=${6:100} => ${7:result2};",
      "\t_ => ${8:default};",
      "}"
    ],
    "description": "Match with range patterns"
  },
  "Match with Guard": {
    "prefix": "matchg",
    "body": [
      "match (${1:value}) {",
      "\t${2:x} when ${3:x > 0} => ${4:result1};",
      "\t${5:x} when ${6:x < 0} => ${7:result2};",
      "\t_ => ${8:default};",
      "}"
    ],
    "description": "Match with guard clauses"
  },
  "Lambda Expression": {
    "prefix": "lambda",
    "body": [
      "|${1:param}| ${2:param} ${3:* 2}"
    ],
    "description": "Lambda expression"
  },
  "Lambda Multi-line": {
    "prefix": "lambdam",
    "body": [
      "|${1:param}| {",
      "\t$0",
      "}"
    ],
    "description": "Multi-line lambda expression"
  },
  "Variable Declaration": {
    "prefix": "var",
    "body": [
      "var ${1:name} = ${2:value};"
    ],
    "description": "Mutable variable"
  },
  "Constant Declaration": {
    "prefix": "let",
    "body": [
      "let ${1:name} = ${2:value};"
    ],
    "description": "Immutable variable"
  },
  "Variable with Type": {
    "prefix": "vart",
    "body": [
      "var ${1:name}: ${2:type} = ${3:value};"
    ],
    "description": "Variable with type annotation"
  },
  "Defer Statement": {
    "prefix": "defer",
    "body": [
      "defer ${1:cleanup_action};"
    ],
    "description": "Defer statement"
  },
  "Assert": {
    "prefix": "assert",
    "body": [
      "assert(${1:condition}, \"${2:message}\");"
    ],
    "description": "Assertion"
  },
  "Print": {
    "prefix": "print",
    "body": [
      "print ${1:value};"
    ],
    "description": "Print statement"
  },
  "File Read": {
    "prefix": "fread",
    "body": [
      "var ${1:content} = io_read_file(\"${2:filename}\");"
    ],
    "description": "Read file"
  },
  "File Write": {
    "prefix": "fwrite",
    "body": [
      "io_write_file(\"${1:filename}\", ${2:content});"
    ],
    "description": "Write file"
  },
  "Shell Command": {
    "prefix": "shell",
    "body": [
      "var ${1:output} = process_shell(\"${2:command}\");"
    ],
    "description": "Execute shell command"
  },
  "Process Execute": {
    "prefix": "exec",
    "body": [
      "var ${1:result} = process_exec(\"${2:command}\");"
    ],
    "description": "Execute process command"
  },
  "String Split": {
    "prefix": "split",
    "body": [
      "var ${1:parts} = str_split(${2:string}, \"${3:delimiter}\");"
    ],
    "description": "Split string"
  },
  "List Operations": {
    "prefix": "list",
    "body": [
      "var ${1:list} = [${2:elements}];",
      "list_push($1, ${3:item});",
      "var ${4:length} = list_length($1);"
    ],
    "description": "List operations"
  },
  "Math Operations": {
    "prefix": "math",
    "body": [
      "var ${1:result} = math_${2|sqrt,pow,sin,cos,abs,floor,ceil,round|}(${3:value});"
    ],
    "description": "Math operations"
  },
  "Log Message": {
    "prefix": "log",
    "body": [
      "log_${1|info,warn,error|}(\"${2:message}\");"
    ],
    "description": "Log message"
  },
  "File Exists Check": {
    "prefix": "fexists",
    "body": [
      "if (fs_exists(\"${1:path}\")) {",
      "\t$0",
      "}"
    ],
    "description": "Check if file exists"
  },
  "Try-Catch Pattern": {
    "prefix": "try",
    "body": [
      "// Error handling pattern",
      "var ${1:result} = ${2:operation};",
      "if (${3:result < 0}) {",
      "\tlog_error(\"${4:Error message}\");",
      "\treturn;",
      "}"
    ],
    "description": "Error handling pattern"
  },
  "Main Function": {
    "prefix": "main",
    "body": [
      "func main() {",
      "\t$0",
      "}",
      "",
      "main();"
    ],
    "description": "Main function"
  },
  "Comment Block": {
    "prefix": "comment",
    "body": [
      "// ============================================",
      "// ${1:Section Title}",
      "// ============================================",
      "$0"
    ],
    "description": "Comment block"
  },
  "Module Template": {
    "prefix": "module",
    "body": [
      "// ============================================",
      "// ${1:Module Name}",
      "// ${2:Description}",
      "// ============================================",
      "",
      "// Imports",
      "",
      "// Functions",
      "func ${3:functionName}() {",
      "\t$0",
      "}",
      "",
      "// Main",
      "func main() {",
      "\t",
      "}",
      "",
      "main();"
    ],
    "description": "Module template"
  }
}
